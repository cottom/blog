@import './_variables'
@import './_header.styl'
html
  font-family: sans-serif

* {
  box-sizing: border-box
  font-stretch: 100%
}

body
  background-color: #fff
  color: #444
  font-family: "TIBch", "Classic Grotesque W01", "Helvetica Neue", Arial, "Hiragino Sans GB", "STHeiti", "Microsoft YaHei", "WenQuanYi Micro Hei", SimSun, sans-serif
  font-size: 14px
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

a
  color: #6E7173
  text-decoration: none
  transition: all .1s ease-in
  &:hover
    opacity 0.7

.main-body
    padding: 0 60px
    max-width: 1150px
    margin: 0 auto
.cottom-iconfont
  font-size: inherit
  &::before
    margin-right 2px

#footer
  font-size: 12px
  margin-top: 50px
  margin-bottom: 30px
  text-align: center

.blog-footer__source
  margin-left: 6px
  color: #666

.main-body-layout
  display flex
  &__left
    width 70%
  &__right
    width: 30%
